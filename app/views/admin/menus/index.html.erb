<section class="wrapper flex">
	<div class="inner">
		<% if params[:genre_id] %>
			<h2 class="section-ttl"><%= @genre.name %>の商品一覧 (全<%= @all_menus_count %>件)</h2>
		<% else %>
			<h2 class="section-ttl">商品一覧 (全<%= @all_menus_count %>件)</h2>
		<% end %>
		<h3 class="text-right">
			<%= link_to "+", new_admin_menu_path, class: "new_admin_menu" %>
		</h3>
		<% if @menus.first %> <!-- @item.existsと同義、SQL1個分削減(?) -->
			<%= render 'admin/menus/index', menus: @menus %>
			<%= paginate @menus %>
		<% else %>
			<h3>対応する商品はありませんでした。</h3>
		<% end %>
	</div>
</section>