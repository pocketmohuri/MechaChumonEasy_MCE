<div class="container">
	<h2>ジャンル管理</h2>
		<table class='table table-bordered'>
				<h4>ジャンル新規登録</h4>
		  	 <%= render 'form', genre: @genre, url: admin_genres_path, submit: '登録' %>
		</table>

	<div class="row">
		<div class="col-md-4">
			<h3>ジャンル一覧</h3>
			<table class="table">
				<thead>
					<tr>
						<th>ジャンル名</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= link_to genre.genres_name, admin_menus_path(genre_id: genre.id), class: "underline" %></td>
							<td>
								<% if genre.is_active? %>
									<span class="text-active">有効</span>
								<% else %>
									<span class="text-invalid">無効</span>
								<% end %>
							</td>
							<td class="text-center"><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
