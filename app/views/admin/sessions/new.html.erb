<section class="inner">
  <h2 class="section-ttl">管理者ログイン</h2>

  <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
    <div class="field mb2">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field mb2">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>

  <h2 class="section-ttl">登録がお済でない方</h2>
  <p><%= link_to "こちら", new_admin_registration_path, class: "underline" %>から新規登録をしてください。</p>

</section>