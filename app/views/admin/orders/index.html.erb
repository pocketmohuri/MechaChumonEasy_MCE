<div class="container">
 <div class="row">
	<h2 class="section-ttl">
		<% if params[:customer_id] %>
			<%= @customer.full_name %>さんの注文履歴一覧
		<% elsif params[:created_at] == "today" %>
			本日の注文履歴一覧
		<% else %>
			注文履歴一覧
		<% end %>
	</h2>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>注文日</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>総計</th>
				<th>注文ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
				<tr>
					<td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), class: "underline" %></td>
					<td><%= link_to order.customer_table.customer_tables_name, admin_order_path(order.id) %></td>
					<td><%= order.order_details.sum(:amount) %></td>
					<td><%= order.total_payment %>円</td>
					<td class="text-center"><%#= order.status_i18n %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @orders %>
 </div>
</div>
