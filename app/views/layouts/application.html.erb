<!DOCTYPE html>
<html>
  <head>
    <title>MechaChumonEasyApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header class="<%= (admin_signed_in? ? "admin_header" : "" ) %>">
      <div class="header-content">
      <%= link_to 'MechaChumonEasy', (admin_signed_in? ? admin_menus_path : root_path ), class: "logo" %>
        <ul class="flex">

          <% if admin_signed_in? %>
            <li><%= link_to '商品一覧',  admin_menus_path %></li>

            <!--<li><%#= link_to '会員一覧',  admin_customers_path %></li>-->
            <li><%= link_to '注文履歴一覧',  admin_orders_path %></li>
            <li><%= link_to 'ジャンル一覧',  admin_genres_path %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
          <% elsif customer_table_signed_in? %>
          <%# binding.pry %>
            <p>ようこそ、<%= current_customer_table.customer_tables_name %>さん!</p>
            <li><%= link_to '商品一覧', menus_path %></li>
            <!--<li><%#= link_to 'マイページ', mypage_path %></li>-->
            <li><%= link_to 'カート', cart_items_path %></li>
            <li><%= link_to 'ログアウト', destroy_customer_table_session_path, method: :delete %></li>

            <%# if admin_signed_in? %>
              <%#= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
            <%# else %>
              <%#= link_to 'ログイン', new_admin_sessio_path %>
            <%# end %>

            <%# if customer_table_signed_in? %>
              <%#= link_to 'ログアウト', destroy_customer_table_session_path, method: :delete %>
            <%# else %>
              <%#= link_to 'ログイン', new_customer_table_session_path %>
            <%# end %>



          <% end %>
    <!--    </ul>-->
        <%# if admin_signed_in? %>
          <%#= form_tag(admin_search_path, method: :get) do %>
            <%#= text_field_tag "search[content]", "", :placeholder =>"会員: 姓,名,セイ,メイ / 商品: 商品名" %>
            <%#= select_tag "search[model]", options_for_select({ "会員" => "customer", "商品" => "item" }) %>
            <%#= select_tag "search[method]", options_for_select({ "部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect" }) %>
            <%#= submit_tag '検索', class: "btn btn-primary" %>
          <%# end %>
        <%# end %>

      </div>
    </header>
    <%= yield %>
  </body>
</html>
